@using Blog.Models;
<table class="table">
    <thead>
        <tr>
            <th>
                编号
            </th>
            <th>
                用户名
            </th>
            <th>
                邮箱
            </th>
            <th>
                手机号
            </th>
            <th>
                头像
            </th>
            
        </tr>
    </thead>
    <tbody>
        @{
            List<Usersd> pl = (List<Usersd>)ViewData["user"];
            if (pl.Count() == 0)
            {
                <tr style="text-align:center;"><td>还没有添加用户</td></tr>
            }
            else
            {
                foreach (var lo in pl)
                {
                    <tr id="@lo.usid">
                        <td>
                            @lo.usid
                        </td>
                        <td>
                            @lo.usname
                        </td>

                        <td>
                            @lo.usemal
                        </td>
                        <td>
                            @lo.usphono
                        </td>
                        <td>
                            @lo.uspic
                        </td>
                       
                        
                    </tr>
                }

            }
        }


    </tbody>
</table>
<script src="~/scripts/easyui/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {

        //删除
        $(".remove").click(function () {
            var k = this.getAttribute("name");
            var r = confirm("将删除关于本相册的所有信息！")
            if (r == true) {
                $.post("phremoe", { id: k }, function (date) {
                    if (date.type == 1) {
                        $("#" + k).hide();
                    } else {
                        alert(date.date);
                    }
                }, "json");
            }

        })
        //详情
        $(".xaingqing").click(function () {
            var k = this.getAttribute("name");

            location.href = "/Blogback/photoimg?id=" + k;
        })


    })
</script>
